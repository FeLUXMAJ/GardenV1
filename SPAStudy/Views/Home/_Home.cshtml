<div class="panel panel-default">
    <div class="panel-heading">
        互联网技术学习
    </div>
    <div class="panel-body" ng-app="myApp" ng-controller="myCtrl">
        <table class="table table-hover">
            <caption>Angular&Redis Study</caption>
            <thead>
                <tr>
                    <th>名</th>
                    <th>姓</th>
                    <th>显示</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="text" ng-model="firstName">
                    </td>
                    <td>
                        <input type="text" ng-model="lastName">
                    </td>
                    <td>{{firstName + " " + lastName}}</td>
                </tr>
            </tbody>
        </table>
        <table class="table table-hover">
            <caption style="font-weight:500;">MySql Study</caption>
            <thead>
                <tr>
                    <th>写数据</th>
                    <th>读数据</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="width:40%">
                        <label>
                            BlogID:<input type="text" ng-model="WriteMySQLDataForBlogID" />
                        </label>
                        <label>
                            Name:<input type="text" ng-model="WriteMySQLDataForName" />
                        </label>
                    </td>
                    <td style="width:40%">
                        @*<input type="text" ng-model="lastName">*@
                        <p ng-bind="ReadMySQLData"></p>
                    </td>
                    <td style="width:20%">
                        @*<p ng-bind="firstName +' '+ lastName"></p>*@
                        <button ng-click="WriteReadData()" type="button" class="btn btn-default">写读数据</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="table table-hover">
            <caption style="font-weight:500;">Kafka&SignalR Study</caption>
            <thead>
                <tr>
                    <th>消息发送</th>
                    <th>接送消息</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="width:40%">
                        <input type="text" ng-model="sKafkaMsg">
                    </td>
                    <td style="width:40%" id="MessageList">
                        @*<p ng-bind="lastName"></p>*@
                    </td>
                    <td style="width:20%">
                        <button ng-click="SendKafkaMsg()" type="button" class="btn btn-default">发送消息</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>